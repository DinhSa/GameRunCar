<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaios.runcar2.Menu"
    android:background="@drawable/bwm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center|left"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/Play"
                    android:scaleType="fitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_null"
                    android:src="@drawable/play_btn" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp">
                </LinearLayout>

                <ImageButton
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:id="@+id/Setting"
                    android:scaleType="fitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_null"
                    android:src="@drawable/setting_btn" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp">
                </LinearLayout>

                <ImageButton
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:id="@+id/hight"
                    android:scaleType="fitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_null"
                    android:src="@drawable/hight_btn" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp">
                </LinearLayout>

                <ImageButton
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:id="@+id/info"
                    android:scaleType="fitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_null"
                    android:src="@drawable/infor_btn" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp">
                </LinearLayout>

                <ImageButton
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:id="@+id/hd"
                    android:scaleType="fitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_null"
                    android:src="@drawable/huongdan_btn" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp">
                </LinearLayout>

                <ImageButton
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:id="@+id/Exit"
                    android:scaleType="fitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_null"
                    android:src="@drawable/exit_btn" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
